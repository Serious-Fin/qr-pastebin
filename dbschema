-- Table: public.shares

-- DROP TABLE IF EXISTS public.shares;

CREATE TABLE IF NOT EXISTS public.shares
(
    id character varying COLLATE pg_catalog."default" NOT NULL,
    title character varying COLLATE pg_catalog."default",
    content character varying COLLATE pg_catalog."default",
    password character varying COLLATE pg_catalog."default",
    expire_at timestamp with time zone,
    author_id integer,
    hide_author boolean NOT NULL DEFAULT false,
    CONSTRAINT shares_pk PRIMARY KEY (id)
)

TABLESPACE pg_default;

ALTER TABLE IF EXISTS public.shares
    OWNER to postgres;


-- Table: public.users

-- DROP TABLE IF EXISTS public.users;

CREATE TABLE IF NOT EXISTS public.users
(
    id integer NOT NULL,
    name character varying COLLATE pg_catalog."default" NOT NULL,
    password character varying COLLATE pg_catalog."default" NOT NULL,
    role integer NOT NULL DEFAULT 0,
    CONSTRAINT users_pk PRIMARY KEY (id)
)

TABLESPACE pg_default;

ALTER TABLE IF EXISTS public.users
    OWNER to postgres;

-- Table: public.sessions

-- DROP TABLE IF EXISTS public.sessions;

CREATE TABLE IF NOT EXISTS public.sessions
(
    session_id text COLLATE pg_catalog."default" NOT NULL,
    user_id integer NOT NULL,
    expire_at timestamp with time zone NOT NULL
)

TABLESPACE pg_default;

ALTER TABLE IF EXISTS public.sessions
    OWNER to postgres;